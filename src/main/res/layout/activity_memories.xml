<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/SCREEN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Memories">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightOrange">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memories"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"/>


    </androidx.appcompat.widget.Toolbar>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/Exit"
        android:layout_marginTop="90dp"
        android:background="@drawable/baseline_arrow_back_24"/>


    <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="70dp"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="610dp"
            android:background="@drawable/detailsblock">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/outline_play_arrow_24"
                android:layout_gravity="center"
                android:id="@+id/btnPlay"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/outline_pause_24"
                android:layout_gravity="right"

                android:id="@+id/btnPause"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/outline_stop_24"
                android:layout_gravity="left"
                android:id="@+id/btnStop"/>

        </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload photo"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/memimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/detailsblock"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload music"
        android:layout_marginTop="440dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@drawable/detailsblock"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/music"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:text="Upload Memory"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/btnUpload"
        android:background="@drawable/roundbuttons"/>










</RelativeLayout>